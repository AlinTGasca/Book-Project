<%= form_with model: @book, local: true do |form| %>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@book.errors.count, "error") %> prohibited
        this book from being saved:
      </h2>
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label "Title" %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label "Description" %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label "Published on: " %><br>
    <%= form.date_field :published, as: :date, value: form.object.try(:strftime,"%m/%d/%Y")%>
  </p>

  <p>
    <%= form.label "Select authors (hold Ctrl to select multiple): " %><br>
    <%= form.select :authors,
                    options_for_select(@authors.map {|s| [s.lastName+" "+s.firstName,s.id]},
                                       @book_authors),
                    {} , {:multiple => true, :size => 5} %>
      </p>

  <div class="field">
    <%= form.label :avatar %><br />
    <%= form.file_field :avatar %><br />
  </div>

  <%= form.submit %>
<% end %>