<div class="container-form"><h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class= "row">
    <%= f.label :email, class: "label-form col-25 " %><br />
    <%= f.email_field :email, autofocus: true, class: "input-form col-75"%>
  </div>

  <div class= "row">
    <%= f.label :password, class: "label-form col-25 " %><br />
    <%= f.password_field :password, autocomplete: "off", class: "input-form col-75" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class= "row">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me , class: "label-form "%>
    </div>
  <% end -%>

  <div class="actions">
    <h3><%= f.submit "Log in", class:"big-button link" %></h3>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>